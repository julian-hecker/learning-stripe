{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
    "lib": ["ESNext"],
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
